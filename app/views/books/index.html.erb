<h1>Books</h1>


<% if flash[:notice] %>
<p id="notice">
  <%= flash[:notice] %>
</p>
<% end %>


<% if @book.errors.any? %>

  <%= @book.errors.count %>件のerrorが発生しました。

  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li>
        <%= message %>
      </li>
    <% end %>
  </ul>
<% end %>


<div class="main">
<table >
  <thead >
    <tr class="nav">
      <th class="nav-list">Title</th>
      <th class="nav-list">Body</th>
      <th colspan="3" class="nav-list"></th>
    </tr>
  </thead>

<% @books.each do |book| %>
  <tbody>
    <tr>
      <td>
        <%= book.title %>
      </td>
      <td>
        <%= book.body %>
      </td>
      <td>
        <%= link_to "Show", book_path(book.id) %>
      </td>
      <td>
        <%= link_to "edit", edit_book_path(book.id) %>
      </td>
      <td>
        <%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "本当に削除しますか？" %>
      </td>
    </tr>
<% end %>
  </tbody>


</table>




<h2>New book</h2>

<%= form_with model: @book do |f| %>

  <p>Title</p>
  <%= f.text_field :title %>

  <p>Body</p>
  <%= f.text_area :body %>
  <br>

  <%= f.submit 'Create Book' %>

<% end %>
</div>